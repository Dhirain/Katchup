<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="1dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="1dp"
        android:importantForAccessibility="no"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:id="@+id/event_indicator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:importantForAccessibility="yes">


            <TextView
                android:id="@+id/event_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10sp"
                android:layout_marginRight="10sp"
                android:layout_toStartOf="@+id/like"
                android:layout_toLeftOf="@+id/like"
                android:layout_toEndOf="@+id/event_image"
                android:layout_toRightOf="@+id/event_image"
                android:maxLines="1"
                android:text="name"
                android:textColor="@color/primaryColor"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/ticket_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/event_name"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10sp"
                android:layout_marginRight="10sp"
                android:layout_toStartOf="@+id/like"
                android:layout_toLeftOf="@+id/like"
                android:layout_toEndOf="@+id/event_image"
                android:layout_toRightOf="@+id/event_image"
                android:maxLines="1"
                android:text="date"
                android:textColor="@color/primary_text"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/ticket_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ticket_date"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10sp"
                android:layout_marginRight="10sp"
                android:layout_toStartOf="@+id/like"
                android:layout_toLeftOf="@+id/like"
                android:layout_toEndOf="@+id/event_image"
                android:layout_toRightOf="@+id/event_image"
                android:textStyle="italic"
                android:maxLines="1"
                android:text="time"
                android:textColor="@color/primary_text"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/ticket_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ticket_time"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10sp"
                android:layout_marginRight="10sp"
                android:layout_toStartOf="@+id/like"
                android:layout_toLeftOf="@+id/like"
                android:layout_toEndOf="@+id/event_image"
                android:layout_toRightOf="@+id/event_image"
                android:textStyle="italic"
                android:maxLines="1"
                android:text="id"
                android:textColor="@color/primary_text"
                android:textSize="18sp" />


            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/qr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ticket_time"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10sp"
                android:layout_marginRight="10sp"
                android:layout_toStartOf="@+id/like"
                android:layout_toLeftOf="@+id/like"
                android:layout_toEndOf="@+id/ticket_id"
                android:layout_toRightOf="@+id/ticket_id"
                android:textStyle="italic"
                android:maxLines="1"
                android:text="id"
                android:textColor="@color/primary_text"
                android:textSize="18sp" />


            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/like"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:clickable="false"
                android:src="@drawable/qr1" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>